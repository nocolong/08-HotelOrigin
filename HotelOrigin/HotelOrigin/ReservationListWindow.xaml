        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelOrigin"
        mc:Ignorable="d"
        Title="ReservationListWindow" Height="300" Width="300">
    <Grid>
        <DataGrid x:Name="dataGrid" Margin="10,62,10,10"/>
        <Button x:Name="buttonAddReservation" Content="Add Reservation" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="123" Height="47" Click="buttonAddReservation_Click"/>
        <ComboBox x:Name="comboBoxCustomer" HorizontalAlignment="Left" Margin="138,10,0,0" VerticalAlignment="Top" Width="144"/>
        <ComboBox x:Name="comboBoxRoom" Margin="138,35,10,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
